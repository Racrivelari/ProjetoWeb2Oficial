<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pets</title>
  <link rel="icon" href="/images/logo-header2.png" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/pets.css" />

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
</head>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.16/jspdf.plugin.autotable.min.js"></script>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap');
</style>

<body>

  <header>
    <nav>
      <div class="nav-container">
        <div class="img-logo">
          <a href="/home"><img class="img-logo" src="/images/logo-header.png" alt="Logo"></a>
        </div>
        <div class="div-links">
          <a class="texto-mid-page" href="/agendamentos">Agendamentos</a>
          <a class="texto-mid-page" href="/pets">Pets</a>
          <a class="texto-mid-page" href="/perfil">Perfil</a>
          <a id="btn-sair" href="/logout">Sair</a>
        </div>
      </div>
    </nav>
  </header>

  <section id="lista-pets" class="container">
    <table class="table" id="myTable">
      <thead class="thead-dark">
        <tr>
          <th scope="col" style="width: 7%;">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Idade</th>
          <th scope="col">Porte</th>
          <th scope="col">Tipo</th>
          <th scope="col">Peso</th>
         <th></th>
         <th></th>
        </tr>
      </thead>
      <tbody id="tabela-pets">
        {{#pets}}
        <tr class="pet">
          <td class="id">{{_id}}</td>
          <td class="nome">{{nome}}</td>
          <td class="idade">{{idade}}</td>
          <td class="porte">{{porte}}</td>
          <td class="tipo">{{tipo}}</td>
          <td class="peso">{{peso}}</td>
          <td><button class="btn-editar" onclick="editarPet('{{_id}}', '{{nome}}')">editar</button></td>
          <td><button class="btn-excluir" onclick="excluirPet('{{_id}}', '{{nome}}')">excluir</button></td>
        </tr>
        {{/pets}}
      </tbody>
    </table>

    <button style="margin-top: 20px"class="btn-extrair-pdf" onclick="exportToPdf()">Extrair PDF</button>

    <form action="/pets/criarPet" method="GET">
      <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
  </section>


  <footer>
    <div id="div-footer">
      <a class="texto-end1-page" href="https://www.linkedin.com/in/ramon-crivelari-batista-b73392234/"
        target="_blank">@Petweb</a>
      <span style="margin: 0 5px">|</span>
      <a class="texto-end2-page" href="/sobre">Sobre</a>
      <span style="margin: 0 5px">|</span>
      <a class="texto-end2-page" href="/tecnologias">Tecnologias</a>
      <span style="margin: 0 5px">|</span>
      <a class="texto-end2-page" href="/contato">Contato</a>
    </div>
  </footer>

  <script src="../javascripts/petFunctions.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>

  <script>
    $(document).ready(function () {
      $('#myTable').DataTable({
        "lengthMenu": [1, 5, 10, 25, 50],
        "language": {
          "lengthMenu": "_MENU_ registros por página",
          "zeroRecords": "Nenhum registro encontrado",
          "info": "Página _PAGE_ de _PAGES_",
          "infoEmpty": "Nenhum registro disponível",
          "infoFiltered": "(filtrado de _MAX_ registros no total)",
          "search": "Buscar",
          "paginate": {
            "first": "Primeiro",
            "last": "Último",
            "next": "Próximo",
            "previous": "Anterior"
          }
        }
      });
    });
  </script>
</body>

</html>
